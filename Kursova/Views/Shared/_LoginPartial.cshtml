@using Kursova.Data
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <span class="main">
        <a id="manage" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome @UserManager.GetUserAsync(User).Result.FirstName!</a>
    </span>
    <div class='nav'>       
        <span class="main">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0">Logout</button>
            </form>
        </span>
    </div>
}
else
{
    <div class='nav'>
        <a id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <a id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </div>
}
