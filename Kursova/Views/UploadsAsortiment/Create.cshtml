@model Kursova.Models.Asortimet

@{
    ViewData["Title"] = "Create";
}
<link rel="stylesheet" href="~/css/loginregistratecreateedit.css" asp-append-version="true" />

<body>
    <div class="containerr">
        <div class="logi">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form">
                    <div class="group">
                        <label asp-for="Image" class="control-label"></label>
                <input name="imageFile" type="file" class="form-control" accept=".jpg, .jpeg, .png" required />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
                    <div class="group">
                        <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                    <div class="group">
                        <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
                    <div class="group">
                        <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
                    <div class="group">
                        <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div >
            <button id="login-submit" type="submit" class="buttonlogi">Create</button>
        </div>
        <div>
            <a class="navv-link" asp-controller="Asotiment" asp-action="Asotiment">Back to List</a>
        </div>
        </div>
        </form>
        </div>
</div>
</body>